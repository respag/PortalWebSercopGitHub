<!DOCTYPE html>
<html>
<head>
    <title>Portal Sercop</title>
    <link rel="shortcut icon" href="~/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.1/jquery.mobile-1.3.1.min.css" />
    @Styles.Render("~/Content/css")
    <link href="~/Content/misEstilos.css" rel="stylesheet" />
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/noty/jquery.noty.js"></script>
    <script src="~/Scripts/noty/layouts/top.js"></script>
    <script src="~/Scripts/noty/layouts/center.js"></script>
    <script src="~/Scripts/noty/layouts/topCenter.js"></script>
    <script src="~/Scripts/noty/layouts/inline.js"></script>
    <script src="~/Scripts/noty/themes/default.js"></script>
    <script src="~/Scripts/sugar.js"></script>
    <script>
        var base = '@System.Web.Configuration.WebConfigurationManager.AppSettings["BaseUrl"]';
        var dom = '@ViewBag.Dominio';
        //var usr = $("#nombre").text().substring(0, 30).trim();
        //var usr = $("#nombre").text().substring(0, 30).trim();
    </script>
    <script type="text/javascript">
        var css_browser_selector = function () {
            var ua = navigator.userAgent.toLowerCase(),
            is = function (t) { return ua.indexOf(t) != -1; },
            h = document.getElementsByTagName('html')[0],
            b = (!(/opera|webtv/i.test(ua)) && /msie (\d)/.test(ua)) ? ('ie ie' + RegExp.$1) : is('firefox/2') ? 'gecko ff2' : is('firefox/3') ? 'gecko ff3' : is('gecko/') ? 'gecko' : is('opera/9') ? 'opera opera9' : /opera (\d)/.test(ua) ? 'opera opera' + RegExp.$1 : is('konqueror') ? 'konqueror' : is('applewebkit/') ? 'webkit safari' : is('mozilla/') ? 'gecko' : '',
            os = (is('x11') || is('linux')) ? ' linux' : is('mac') ? ' mac' : is('win') ? ' win' : '';
            var c = b + os + ' js'; h.className += h.className ? ' ' + c : c;
    }();
    </script>
</head>

<body>
    <div class="jqm-demos ui-responsive-panel" id="panel-responsive-page1" data-url="panel-responsive-page1" data-role="page" data-title="Portal Sercop">
        <div data-role="header">
            <img src="~/images/logo.png" class="img-responsive logo" style="left: 33px; top: -3px;">
            <h3 style="text-align:left;margin-left: 185px;">Ultimus Portal Web</h3>
            <a id="initiate2" href="#" data-toggle="tooltip" class="botones" style="position:absolute;left:350px;top:5px"
               data-original-title="Iniciar Procesos "><i class="fa fa-play fa-lg"></i></a>

            <a href="#add-form" data-iconpos="notext" data-icon="gear">Add</a>

            <a id="inbox2" href="#" data-toggle="tooltip" class="botones" style="position:absolute;left:400px;top:5px"
               data-original-title="Mis Procesos "><i class="fa fa-inbox fa-lg"></i></a>

            <a id="completed2" href="#c" data-toggle="tooltip" class="botones" style="position:absolute;left:450px;top:5px"
               data-original-title="Completados "><i class="fa fa-check-circle fa-lg"></i></a>

            <a href="#nav-panel" data-iconpos="notext" data-icon="bars" style="position:absolute;left:5px"
               data-toggle="tooltip" class="boton2" data-original-title="Muestra/Oculta Panel Izquierdo"></a>


        </div><!-- /header -->
        <div class="ui-content jqm-content jqm-fullwidth" role="main">
            <div class="jumbotron">
                <span class="text-left lead">@ViewBag.Title</span>
                <a href="#user" data-toggle="tooltip" class="botones lead" style="float:right" id="linkUsuario"
                   data-original-title="Datos del Usuario ">
                    <i class="fa fa-user fa-lg"></i> <span id="nombre">@MiHelper.DevuelveUsuario(@ViewBag.Resultado)</span>
                </a>
            </div>
            <div data-demo-html="#panel-responsive-page1">
                @RenderBody()
            </div><!--/demo-html -->

        </div><!-- /content -->


        <div id="nav-panel" data-role="panel" data-display="push">
            <h2 style="color: white;text-shadow: none;">Vistas</h2>
            <div class="wen">
                <ul class="nav">
                    <li class="active">
                        <a id="initiate" style="font-size: 11px;">
                            <i class="fa fa-play fa-lg"></i> Iniciar Procesos
                            <span class="medalla" id="initiateLargo" style="visibility:hidden"></span>
                        </a>
                    </li>
                    <li>
                        <a id="inbox" style="font-size: 11px;">
                            <i class="fa fa-inbox fa-lg"></i> Mis Procesos
                            <span class="medalla" id="inboxLargo" style="visibility:hidden"></span>
                        </a>
                    </li>
                    <li>
                        <a id="completed" style="font-size: 11px;">
                            <i class="fa fa-check-circle fa-lg"></i> Completados
                            <span class="medalla" id="completedLargo" style="visibility:hidden"></span>
                        </a>
                    </li>
                </ul>
                <br />
                <div class="powered">
                    <br />
                    Powered by...
                    <h4>Ultimus</h4>
                    <img src="~/images/UltimusLogoVert.png" style="width:30px" />
                    &copy;2014
                </div>
            </div>
        </div><!-- /panel -->
        <div id="add-form" data-role="panel" data-theme="a" data-display="reveal" data-position="right"
             style="padding-left:10px">
            Panel para futuras ampliaciones
        </div><!-- /panel -->
    </div>

    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="http://code.jquery.com/mobile/1.3.1/jquery.mobile-1.3.1.min.js"></script>
    <script src="~/Scripts/app/script.js"></script>
</body>
</html>